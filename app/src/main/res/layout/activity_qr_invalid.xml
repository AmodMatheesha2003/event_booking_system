<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/redErrorlight">

    <TextView
        android:id="@+id/declineStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invalid Ticket"
        android:textSize="35sp"
        android:textColor="@color/redError"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"/>

    <ImageView
        android:id="@+id/errorIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/denied"
        android:contentDescription="Error Icon"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This ticket is not valid. Please verify again."
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/light_black"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/qrtryAgainButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Try Again"
        android:textSize="16sp"
        android:backgroundTint="@color/redError"
        android:textColor="@android:color/white"
        android:layout_marginTop="50dp"
        android:padding="12dp"/>
</LinearLayout>
